<%- include('partials/header'); -%>







    <div class= "reveal-grid">

   <div class="before-after-section">

   <div class="container">
      <div class="row">
        <div class="col-12 reveal-name"
            <p>
            Name : <%= firstName + " " + lastName  %> <br />
            </p>
        </div>
    </div>

    <div class="row info-position">
      <div class="col-lg-6 col-sm-12">
            <p class="before-info">

              Before Weight :<%= beforeWeight %> lbs <br>
              Height : <%= height %> ft <br />
              Before BMI: <%= beforeBmi %>
            </p>
        </div>

    <div class="col-lg-6 col-sm-12">
          <p class="after-info">
            After Weight :<%= afterWeight %> lbs <br>
            Height : <%= height %> ft<br />
            Before BMI: <%= afterBmi %>

          </p>
      </div>
    </div>

    <div class="col-12 ">
      <p class="secret">
        The magician's secret : <%=secrets %>
      </p>
      </div>
    </div>

      </div>



        <div class="container-fluid b1">

            <img class="bf front" src= "<%= photos[0] %>" alt="Before Front Picture" />
            <img class="after-front" src= "<%= photos[1] %>"  alt="After Front Picture" />
        </div>

        <div class="container-fluid b1 b-l-side second">
            <img class="bf l-side" src="<%= photos[2] %>" alt="Before Side Picture" />
            <img class="after-side" src="<%= photos[3] %>" alt="After Side Picture" />
        </div>

        <div class="container-fluid b1 b-r-side third first">
            <img class="bf r-side" src="<%= photos[4] %>" alt="Before Side 2 Picture" />
            <img class="after-side2" src="<%= photos[5] %>" alt="After Side 2 Picture" />
        </div>

        <div class="container-fluid b1 b-back fourth second">
            <img class="bf back" src="<%= photos[6] %>" alt="Before Back Picture" />
            <img class="after-back" src="<%= photos[7] %>" alt="After Back Picture" />

        </div>

        <div class = "post-buttons">
           <form action="/loginPost" id="resetButton" method="post" >
             <input type="hidden" name="usernameReset" value="<%= username %>" />
             <button type="Submit" id="reset-button" class="btn btn-warning btn-xlarge" value="submit">Reset</button>
           </form>

           <button id="code-button" class="code-button btn btn-warning btn-xlarge" value="submit">Reveal Friend Code</button>
           <p class="code-to-share">
             copy & share with friends! : <%= friendCode %>
           </p>

           </div>

    </div>

<script type=" text/javascript" src="/javascripts/voila.js"> </script>
<%- include('partials/footer'); -%>
