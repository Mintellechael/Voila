<%- include('partials/header'); -%>





    <div class= "reveal-grid">

   <div class="before-after-section">


    <p class="reveal-name">

    Name : <%= firstName + " " + lastName %> <br />
    </p>

      <p class= "before-info">

        Before Weight :<%= beforeWeight %> lbs <br>
        Height : <%= height %>
        Before BMI: <%= beforeBmi %>
      </p>

      <p class= "after-info">
        After Weight :<%= afterWeight %> lbs <br>
        Height : <%= height %>
        Before BMI: <%= afterBmi %>

      </p>

      <p class="secret">

        The magician's secret : <%=secrets %>

      </p>

       </div>


      <input type="hidden" name="usernameReset" value="<%= username %>" />


      <div class="container-fluid b1">
          <img class="bf front pics" src= "<%= beforeFront %>" alt="Before Front Picture" />
          <img class="after-front pics" src= "<%= afterFront %>"  alt="After Front Picture" />

      </div>

      <div class="container-fluid b1 b-l-side second">
          <img class="bf l-side pics" src="<%= beforeLeft %>" alt="Before Side Picture" />
          <img class="after-side pics" src="<%= afterLeft %>" alt="After Side Picture" />
      </div>

      <div class="container-fluid b1 b-r-side third first">
          <img class="bf r-side pics" src="<%= beforeRight %>" alt="Before Side 2 Picture" />
          <img class="after-side2 pics" src="<%= afterRight %>" alt="After Side 2 Picture" />
      </div>

      <div class="container-fluid b1 b-back fourth second">
          <img class="bf back pics" src="<%= beforeBack %>" alt="Before Back Picture" />
          <img class="after-back pics" src="<%= afterBack %>" alt="After Back Picture" />
      </div>

    <form action="/loginPost" id="resetButton" method="post" >
      <input type="hidden" name="usernameReset" value="<%= username %>" />
      <button type="Submit" id="reset-button" class="btn btn-warning btn-xlarge" value="submit">Reset</button>
    </form>

    </div>

<script type=" text/javascript" src="/javascripts/voila.js"> </script>


<%- include('partials/footer'); -%>
